class Solution {
    public String mergeAlternately(String word1, String word2) {

        int max=Math.max(word1.length(),word2.length());
        String ans="";

        for(int i=0;i<max;i++){

            try{
                ans+=word1.charAt(i);
            }catch(Exception e){}
             try{
                ans+=word2.charAt(i);
            }catch(Exception e){}

        }
        return ans;
    }
}
